<Application x:Class="Main.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Main.Windows"
             Exit="App_OnExit" Startup="App_OnStartup">
    <Application.Resources>


        <!-- button style template from here -->

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="12" />
        </Style>


        <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#FF2E8DB3" />
            <Setter Property="Foreground" Value="White" />
            <!-- <Setter Property="MinHeight" Value="25" /> -->
        </Style>


        <Style x:Key="WinAll" TargetType="{x:Type Window}">
            <!-- <Setter Property="FontFamily" -->
            <!--         Value="Comic Sans MS" /> -->
            <Setter Property="FontSize" Value="13" />
        </Style>

    </Application.Resources>

    <!-- do not crate main window, StartupUri="MainWindow.xaml" -->
</Application>